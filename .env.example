# Simple Auth Environment Variables (for deployment)
# Copy this file to .env and update the values

# Spring Profile (MUST be simple-auth for JWT authentication)
SPRING_PROFILES_ACTIVE=simple-auth

# JWT Secret (CHANGE THIS! Must be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-to-random-32-char-string-for-production

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=taxooldb
DB_USERNAME=postgres
DB_PASSWORD=your-secure-password-here

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:3000,http://localhost:5173

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# Coinbase OAuth (optional, for broker integration)
COINBASE_CLIENT_ID=your-coinbase-client-id
COINBASE_CLIENT_SECRET=your-coinbase-client-secret
COINBASE_BASE_URL=https://api.coinbase.com
COINBASE_OAUTH_URL=https://login.coinbase.com

# AWS Region (not used in simple-auth, but required by config)
AWS_REGION=eu-central-1
